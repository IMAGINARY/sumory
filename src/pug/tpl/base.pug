doctype html
html
  - body = { class: [] };
  - main = { class: [] };
  block init
  head
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    meta(property="og:url", content!=config.siteURL)
    meta(property="og:type", content="website")
    meta(property="og:title", content!=config.siteName)
    meta(property="og:image", content="")
    meta(name="description", content!=(description || config.siteDescription))
    meta(property="og:description", content!=(description || config.siteDescription))
    block meta
    link(rel="icon", type="image/png", href="assets/img/favicon.png")
    link(rel="stylesheet", href="vendor/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet", href="vendor/fontawesome/css/all.min.css", media="all", type="text/css")
    link(rel="stylesheet", href="vendor/chartjs/Chart.min.css", media="all", type="text/css")
    link(rel='stylesheet', href!=asset('assets/css/default.css'), media='all', type='text/css')
    block stylesheets
    title
      != (title ? title + ' - ' + config.siteName : config.siteName )
    block head
  body(class!=body.class.join(' '))
    block body
    script(type="text/javascript", src="vendor/jquery/jquery-3.3.1.slim.min.js")
    script(type="text/javascript", src="vendor/popper/popper.min.js")
    script(type="text/javascript", src="vendor/bootstrap/js/bootstrap.min.js")
    script(type="text/javascript", src="vendor/i18n4js/i18n4js-1.3.1.min.js")
    script(type="text/javascript", src="vendor/chartjs/Chart.min.js")
    script(type="text/javascript", src="vendor/chartjs/chartjs-plugin-datalabels.js")
    block scripts
    script(type="text/javascript", src!=asset('assets/js/dependencies.min.js'))
    script(type="text/javascript", src!=asset('assets/js/bundle.min.js'))
    block closing
